<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Merchant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryVariant">@color/browser_actions_title_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="actionButtonsColor">@color/cardview_dark_background</item>
        <item name="actionButtonTextColor">@color/white</item>
        <item name="cardBackground">@color/tabColorLight</item>
        <item name="followingButton">@color/tabColorLight</item>
        <item name="textColorForInputEdit">@color/tabColor</item>
        <item name="inputEditBackground">@color/cardview_dark_background</item>
        <item name="hintColorForTextInput">@color/tabColor</item>
        <item name="drawerBackground">@color/drawerBackgroundDark</item>
    </style>

    <style name="TextView" />

    <style name="TextView.Label">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">#44FFFFFF</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>