<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Merchant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tabColorLight</item>
        <item name="colorPrimaryVariant">@color/tabColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="splashScreenDisplay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_brandible_splash</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="colorControlActivated">@color/tabColor</item>
    </style>

        <style name="TextView" />

        <style name="TextView.Label">
            <item name="android:layout_alignParentLeft">true</item>
            <item name="android:layout_alignParentTop">true</item>
            <item name="android:layout_marginLeft">10dp</item>
            <item name="android:layout_marginTop">30dp</item>
            <item name="android:textSize">24sp</item>
            <item name="android:paddingLeft">10dp</item>
            <item name="android:paddingRight">10dp</item>
            <item name="android:paddingTop">5dp</item>
            <item name="android:paddingBottom">5dp</item>
            <item name="android:background">#44FFFFFF</item>
            <item name="android:fontFamily">sans-serif-thin</item>
            <item name="android:textColor">@android:color/white</item>
        </style>

