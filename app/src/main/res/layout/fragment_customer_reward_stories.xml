<!--            android:translationZ="2dp" />-->
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imgChatWithBusiness"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/click_to_chat_with_business_owner"
        android:elevation="100dp"
        android:src="@drawable/ic_chat_with_business" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:elevation="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvNumberOfViewers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:padding="20dp"
            android:text="100"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_number_of_viewers" />

        <TextView
            android:id="@+id/tvLikeBrandStory"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:drawableTint="@color/black"
            android:padding="20dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_thumbs_up" />
    </LinearLayout>




</RelativeLayout>