<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRewardStatusTag"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:alpha=".75"
        android:textStyle="bold"
        android:background="@color/black"
        android:elevation="100dp"
        android:text="Buy 5 cupcakes and get a reward of #200 to get closer to your gift goal"
        android:textColor="@color/whitesmoke"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_progress_bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#4D4D4D"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/ll_status"
        android:layout_below="@id/ll_progress_bar"
        android:layout_width="match_parent"
        android:layout_above="@id/imgChatWithBusiness"
        android:background="#000000"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imgChatWithBusiness"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/click_to_chat_with_business_owner"
        android:elevation="100dp"
        android:src="@drawable/ic_chat_with_business" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:elevation="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvNumberOfViewers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:padding="20dp"
            android:text="100"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_number_of_viewers" />

        <TextView
            android:id="@+id/tvLikeBrandStory"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:drawableTint="@color/black"
            android:padding="20dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_thumbs_up" />
    </LinearLayout>




</RelativeLayout>