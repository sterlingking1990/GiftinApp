<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRewardStatusTag"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:alpha=".75"
        android:textStyle="bold"
        android:background="@color/black"
        android:elevation="100dp"
        android:text="Buy 5 cupcakes and get a reward of #200 to get closer to your gift goal"
        android:textColor="@color/whitesmoke"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_progress_bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#4D4D4D"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/ll_status"
        android:layout_below="@id/ll_progress_bar"
        android:layout_width="match_parent"
        android:layout_above="@id/imgChatWithBusiness"
        android:background="#000000"
        android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgChatWithBusiness"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:elevation="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chat_with_business"
            android:contentDescription="@string/click_to_chat_with_business_owner" />

    <TextView
        android:id="@+id/tvNumberOfViewers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/black"
        android:drawableTint="@color/black"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:text=""
        android:layout_toStartOf="@id/imgChatWithBusiness"
        app:drawableStartCompat="@drawable/ic_number_of_viewers" />



</RelativeLayout>