<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_redeemed_customer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="MrBiggs"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_amount_redeemed"
                app:layout_constraintHorizontal_bias="0.155"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:id="@+id/tv_amount_redeemed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="10dp"
                android:text="2000"
                app:layout_constraintBottom_toTopOf="@+id/tv_redeemed_customer_contact_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_redeemed_customer_contact_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:text="8-12-20"
                app:layout_constraintBottom_toTopOf="@+id/tv_redeemed_customer_contact_2"
                app:layout_constraintEnd_toEndOf="@+id/tv_amount_redeemed"
                app:layout_constraintStart_toStartOf="@+id/tv_amount_redeemed"
                app:layout_constraintTop_toBottomOf="@+id/tv_amount_redeemed" />

            <TextView
                android:id="@+id/tv_redeemed_customer_contact_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="Lekki"
                app:layout_constraintBottom_toTopOf="@+id/tv_redeemed_customer_address"
                app:layout_constraintEnd_toEndOf="@+id/tv_redeemed_customer_contact_1"
                app:layout_constraintStart_toStartOf="@+id/tv_redeemed_customer_contact_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_redeemed_customer_contact_1" />

            <TextView
                android:id="@+id/tv_redeemed_customer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Lekki"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_redeemed_customer_contact_2"
                app:layout_constraintStart_toStartOf="@+id/tv_redeemed_customer_contact_2"
                app:layout_constraintTop_toBottomOf="@+id/tv_redeemed_customer_contact_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>